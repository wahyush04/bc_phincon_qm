{
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": "./",
        "module": "ESNext",
        "target": "ESNext",
        "rootDir": "./src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "src/dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    }
}
